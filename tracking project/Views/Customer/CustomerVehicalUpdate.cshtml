@model tracking_project.Models.CustomerVehicle

@{
    ViewData["Title"] = "CustomerVehicalUpdate";
}

<h1>Customer vehicle update</h1>


<hr />
<div class="">
    <div class="">
        <form asp-action="CustomerVehicalUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h4 style="font-family:'Times New Roman'">Vehicle Info</h4>
            <input type="hidden" asp-for="VehicalId" />
