                    <label asp-for="Source" class="control-label"></label>
                    <input asp-for="Source" class="form-control" />
                    <span asp-validation-for="Source" class="text-danger"></span>
                </div>
            </div><br />
            <div class="row col-sm-10">

                <div class="col">
                    <label asp-for="ExtraFeatures" class="control-label"></label>
                    <textarea asp-for="ExtraFeatures" class="form-control">
                    </textarea>
                </div>
                <div class="col">
                    <label asp-for="SpacialRemarkes" class="control-label"></label>
                    <textarea asp-for="SpacialRemarkes" class="form-control"></textarea>

                </div>
            </div><br />
            <div class="row col-sm-10">

                <div class="col">
                    <label asp-for="PaymentRemarkes" class="control-label"></label>
                    <input asp-for="PaymentRemarkes" class="form-control" />
                    <span asp-validation-for="PaymentRemarkes" class="text-danger"></span>
                </div>
                <div class="col">
                    <label class="form-check-label" style="margin-top:40px;margin-left:40px">
                        <input class="form-check-input" asp-for="PaymentAlert" /> @Html.DisplayNameFor(model => model.PaymentAlert)
                    </label>
                </div>
            </div><br />
            <div class="row col-sm-10">
                <div class="col">
                    <label class="control-label">Normal password</label>
                    <input asp-for="Normal" class="form-control" placeholder="" />
                    <span asp-validation-for="Normal" class="text-danger"></span>
                </div>
                <div class="col">
                    <label class="control-label">Emergency password</label>
                    <input asp-for="Emergency" class="form-control" placeholder="" />
                    <span asp-validation-for="Emergency" class="text-danger"></span>
                </div>
            </div><br />
            <div class="row col-sm-10">
                <div class="col">
                    <label class="control-label">Driver</label>
                    <input asp-for="Driver" class="form-control" placeholder="" />
                    <span asp-validation-for="Driver" class="text-danger"></span>
                </div>
                <div class="col">
                    <label class="control-label">DrContact</label>
                    <input asp-for="DrContact" class="form-control" placeholder="" />
