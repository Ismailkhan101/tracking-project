                </div>
                <div class="col">
                    <label class="control-label">Phone Two</label>
                    <input asp-for="PhoneSTwo" class="form-control" placeholder="218-564-7678" />
                    <span asp-validation-for="PhoneSTwo" class="text-danger"></span>
                </div>
                <div class="col">
                    <label class="control-label">Relation</label>
                    <input asp-for="SRelation" class="form-control" />
                    <span asp-validation-for="SRelation" class="text-danger"></span>
                </div>
            </div><br />
            <h4 style="margin-top:10px;">Emergency Contact Person</h4>
            <div class="row col-sm-10">
                <div class="col">
                    <label class="control-label">Name</label>
                    <input asp-for="ECPName" class="form-control" placeholder="" />
