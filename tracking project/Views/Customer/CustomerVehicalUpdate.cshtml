                <div class="col">
                    <label class="control-label">Phone Two</label>
                    <input asp-for="ECPPhoneTwo" class="form-control" placeholder="218-564-7678" />
                    <span asp-validation-for="ECPPhoneTwo" class="text-danger"></span>
                </div>
                <div class="col">
                    <label class="control-label">Relation</label>
                    <input asp-for="ECPRelation" class="form-control" />
                    <span asp-validation-for="SRelation" class="text-danger"></span>
                </div>
            </div><br />
           
            <div class="row col-sm-10">
                <div class="col">
                    <input type="submit" value="Next" class="btn btn-primary" style="margin-top:30px;width:100px;" />

                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
