@model tracking_project.Models.CustomerVehicle

@{
    ViewData["Title"] = "CustomerVehicleCreate";
}



<h4>Vehicle registration</h4>
<hr />
<div class="">
    <div class="">

        <form asp-action="CustomerVehicleCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h4 style="font-family:'Times New Roman'"> Vehicle Info</h4>
            <select asp-for="Customer.CustomerId" class="form-control" asp-items="@(new SelectList(ViewBag.listod,"CustomerId","Name",ViewBag.Id))" style="display:none">
            </select>
            <div class="row col-sm-10">
                <div class="col">
                    <label asp-for="Customer.CustomerId" class="control-label"></label>
                    <select asp-for="Customer.CustomerId" class="form-control" asp-items="@(new SelectList(ViewBag.listod,"CustomerId","Name",ViewBag.Id))" disabled>
                    </select>
                </div>

                <div class="col">
                    <label asp-for="UnitVehicle.UnitId" class="control-label"></label>
                    <select asp-for="unitId" class="form-control" asp-items="@(new SelectList(ViewBag.UnitId,"","UnitId"))">
                    </select>
                </div>
            </div><br />
                  <div class="row col-sm-10">
                      <div class="col">
                          <label asp-for="RegistrationNo" class="control-label"></label>
                          <input asp-for="RegistrationNo" class="form-control" placeholder="KH-5708" />
                          <span asp-validation-for="RegistrationNo" class="text-danger"></span>
                      </div>
                      <div class="col">
                          <label asp-for="EngineNo" class="control-label"></label>
                          <input asp-for="EngineNo" class="form-control" placeholder="19k203455" />
                          <span asp-validation-for="EngineNo" class="text-danger"></span>
                      </div>
                      <div class="col">
                          <label asp-for="DecidedAMF" class="control-label"></label>
                          <input asp-for="DecidedAMF" class="form-control" placeholder="19k203455" />
                          <span asp-validation-for="DecidedAMF" class="text-danger"></span>
                      </div>
                  </div><br />
            <div class="row col-sm-10">
                <div class="col">
                    <label asp-for="MakeModel" class="control-label"></label>
                    <input asp-for="MakeModel" class="form-control" />
                    <span asp-validation-for="MakeModel" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="ChasisNo" class="control-label"></label>
                    <input asp-for="ChasisNo" class="form-control" placeholder=" 1 HD 1 AA K 1 X B Y 123456" />
                    <span asp-validation-for="ChasisNo" class="text-danger"></span>
                </div>
            </div><br />
            <div class="row col-sm-10">

                <div class="col">
                    <label asp-for="Color" class="control-label"></label>
                    <input asp-for="Color" class="form-control" />
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Year" class="control-label"></label>
                    <input asp-for="Year" class="form-control" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
            </div><br />
            <h4 style="font-family:'Times New Roman'">Extra Info</h4>
            <div class="row col-sm-10">
                <div class="col">
                    <label asp-for="Reason" class="control-label"></label>
                    <input asp-for="Reason" class="form-control" />
                    <span asp-validation-for="Reason" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Source" class="control-label"></label>
                    <input asp-for="Source" class="form-control" />
                    <span asp-validation-for="Source" class="text-danger"></span>
                </div>
            </div><br />
            <div class="row col-sm-10">

                <div class="col">
                    <label asp-for="ExtraFeatures" class="control-label"></label>
                    <textarea asp-for="ExtraFeatures" class="form-control">
                    </textarea>
                </div>
                <div class="col">
                    <label asp-for="SpacialRemarkes" class="control-label"></label>
                    <textarea asp-for="SpacialRemarkes" class="form-control"></textarea>

                </div>
            </div><br />
            <div class="row col-sm-10">

                <div class="col">
                    <label asp-for="PaymentRemarkes" class="control-label"></label>
                    <input asp-for="PaymentRemarkes" class="form-control" />
                    <span asp-validation-for="PaymentRemarkes" class="text-danger"></span>
                </div>
                <div class="col">
                    <label class="form-check-label" style="margin-top:40px;margin-left:40px">
                        <input class="form-check-input" asp-for="PaymentAlert" /> @Html.DisplayNameFor(model => model.PaymentAlert)
                    </label>
                </div>
            </div><br />
            <h4 style="font-family:'Times New Roman'">payment Info</h4>
            <div class="row col-sm-10">

                <div class="col">
                    <label asp-for="Bank" class="control-label"></label>
                    <select asp-for="Bank" class="form-control">
                        <option>---select bank---</option>
                        <option>HBL</option>
                        <option>MCB</option>
                        <option>Islamic</option>
                        <option>JS bank</option>
                    </select>
                </div>
                <div class="col">
                    <label asp-for="DueDate" class="control-label"></label>
                    <input asp-for="DueDate" class="form-control" type="date" />
                    <span asp-validation-for="DueDate" class="text-danger"></span>
                </div>
            </div><br />
                  <div class="row col-sm-10">
                      <div class="col" style="display:none;" >
                          <label asp-for="Net" class="control-label"></label>
                          <input asp-for="Net" class="form-control"  />
                          <span asp-validation-for="Net" class="text-danger"></span>
                      </div>
                      <div class="col">
                          <label asp-for="ReceiveAmount" class="control-label"></label>
                          <input asp-for="ReceiveAmount" class="form-control" />
                          <span asp-validation-for="ReceiveAmount" class="text-danger"></span>
                      </div>

                      <div class="col" style="display:none;">
                          <label asp-for="Balance" class="control-label"></label>
                          <input asp-for="Balance" class="form-control" />
                          <span asp-validation-for="Balance" class="text-danger"></span>
                      </div>
                  </div><br />
            <div class="row col-sm-10">
                <div class="col">
                    <label asp-for="Tax" class="control-label"></label>
                    <input asp-for="Tax" class="form-control" />
                    <span asp-validation-for="Tax" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="TaxDeduction" class="control-label"></label>
                    <input asp-for="TaxDeduction" class="form-control" />
                    <span asp-validation-for="TaxDeduction" class="text-danger"></span>
                </div>
            </div><br />
            <div class="row col-sm-10">
                <div class="col">
                    <label asp-for="Commission" class="control-label"></label>
                    <input asp-for="Commission" class="form-control" />
                    <span asp-validation-for="Commission" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Discount" class="control-label"></label>
                    <input asp-for="Discount" class="form-control" />
                    <span asp-validation-for="Discount" class="text-danger"></span>
                </div>
            </div><br />
            <div class="row col-sm-10">
                <div class="col">
                    <label asp-for="ExtraCharges" class="control-label"></label>
                    <input asp-for="ExtraCharges" class="form-control" />
                    <span asp-validation-for="ExtraCharges" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="InvoiceAmount" class="control-label"></label>
                    <input asp-for="InvoiceAmount" class="form-control" />
                    <span asp-validation-for="InvoiceAmount" class="text-danger"></span>
                </div>
            </div><br />
            <div class="row col-sm-10">

                <div class="col">
                    <label asp-for="Deduction" class="control-label"></label>
                    <input asp-for="Deduction" class="form-control" />
                    <span asp-validation-for="Deduction" class="text-danger"></span>
                </div>


                <div class="col">
                    <input type="submit" value="Add" class="btn btn-primary" style="width:100px;margin-top:30px;" />

                </div>
            </div>

        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
