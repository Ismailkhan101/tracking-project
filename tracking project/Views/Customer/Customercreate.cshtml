@model tracking_project.Models.Customer

@{
    ViewData["Title"] = "Customercreate";
}

<h1>Customercreate</h1>

<h4>Customer</h4>
<hr />
<div class="">
    <div class="">
        <form asp-action="Customercreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row col-sm-10">
                <div class="col">

                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="CompanyName" class="control-label"></label>
                     <select asp-for="CompanyName" class="form-control" asp-items="@(new SelectList(ViewBag.company,"CompanyName","CompanyName",ViewBag.Id))">
            </select>
                </div>
            </div><br />
            <div class="row col-sm-10">
                <div class="col">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="XYZ@gmail.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="CNIC" class="control-label"></label>
                    <input asp-for="CNIC" class="form-control" placeholder="45435-6545648-3" />
                    <span asp-validation-for="CNIC" class="text-danger"></span>
                </div>
            </div><br />
            <div class="row col-sm-10">
                <div class="col">
                    <label asp-for="DateOfBirth" class="control-label"></label>
                    <input asp-for="DateOfBirth" class="form-control" type="date" placeholder=" date of birth" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row col-sm-10">
                <div class="col">
                    <label class="control-label">Phone One</label>
                    <input asp-for="PhonePOne" class="form-control" placeholder="345-678-8976" />
                    <span asp-validation-for="PhonePOne" class="text-danger"></span>
                </div>
                <div class="col">
                    <label class="control-label">Phone Two</label>
                    <input asp-for="PhonePTwo" class="form-control" placeholder="345-678-8976" />
                    <span asp-validation-for="PhonePTwo" class="text-danger"></span>
                </div>
            </div><br />
            <div class="row col-sm-10">
                <div class="col">
                    <label class="control-label">Normal password</label>
                    <input asp-for="Normal" class="form-control" placeholder="" />
                    <span asp-validation-for="Normal" class="text-danger"></span>
                </div>
                <div class="col">
                    <label class="control-label">Emergency password</label>
                    <input asp-for="Emergency" class="form-control" placeholder="" />
                    <span asp-validation-for="Emergency" class="text-danger"></span>
                </div>
            </div><br />
            <h4 style="margin-top:10px;">Secondry user</h4>
            <div class="row col-sm-10">
                <div class="col">
                    <label  class="control-label">Name</label>
                    <input asp-for="SName" class="form-control" placeholder="" />
                    <span asp-validation-for="SName" class="text-danger"></span>
                </div>
                <div class="col">
                    <label class="control-label">Phone One</label>
                    <input asp-for="PhoneSOne" class="form-control" placeholder="218-564-7678" />
                    <span asp-validation-for="PhoneSOne" class="text-danger"></span>
                </div>
                <div class="col">
                    <label  class="control-label">Phone Two</label>
                    <input asp-for="PhoneSTwo" class="form-control" placeholder="218-564-7678" />
                    <span asp-validation-for="PhoneSTwo" class="text-danger"></span>
                </div>
            </div><br />

            <div class="row col-sm-10">
                <div class="col">
                    <input type="submit" value="Add" class="btn btn-primary" style="width:100px" />
                    <a asp-action="Index">Back to List</a>
                </div>
        </form>
    </div>

    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
