@model tracking_project.Models.InvoiceYearly

@{
    ViewData["Title"] = "InvoiceYearlyUpdate";
}

<h4>Invoice yearly update</h4>


<hr />
<div class="">
    <div class="">
        <form asp-action="InvoiceYearlyUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input asp-for="VehicalId" class="form-control"asp-item="@ViewBag.vehicle" type="hidden" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="AmfStatus" /> @Html.DisplayNameFor(model => model.AmfStatus)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="YearlyPaymentStatus" /> @Html.DisplayNameFor(model => model.YearlyPaymentStatus)
                </label>
            </div>
            <div class="row col-sm-10">
                <div class="col">
                    <label asp-for="ValidFromDate" class="control-label"></label>
                    <input asp-for="ValidFromDate" class="form-control" />
                    <span asp-validation-for="ValidFromDate" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="ExpiryDate" class="control-label"></label>
                    <input asp-for="ExpiryDate" class="form-control" />
                    <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                </div>
            </div><br />

            <div class="row col-sm-10">
                <div class="col">
                    <label asp-for="Year" class="control-label"></label>
                    <input asp-for="Year" class="form-control" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Comission" class="control-label"></label>
                    <input asp-for="Comission" class="form-control" />
                    <span asp-validation-for="Comission" class="text-danger"></span>
                </div>
            </div><br />
            <div class="row col-sm-10">
                <div class="col">
                    <label asp-for="Discount" class="control-label"></label>
                    <input asp-for="Discount" class="form-control" />
                    <span asp-validation-for="Discount" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Service_Tax" class="control-label"></label>
                    <select id="Tax" asp-for="Service_Tax" class="form-control">
                        <option>BRA-19.5%</option>
                        <option>SRB-19.5%</option>
                        <option>PRA-19.5%</option>
                        <option>KPRA-19.5%</option>
                        <option>ICT-15%</option>
                        <option>KPRA-19.5%</option>
                        <option>Zero</option>
                    </select>

                </div>
            </div><br />
            <div class="row col-sm-10">
                <div class="col">
                    <label asp-for="ReceivedAmount" class="control-label"></label>
                    <input asp-for="ReceivedAmount" class="form-control" />
                    <span asp-validation-for="ReceivedAmount" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="BalanceAmount" class="control-label"></label>
                    <input asp-for="BalanceAmount" class="form-control" />
                    <span asp-validation-for="BalanceAmount" class="text-danger"></span>
                </div>
            </div><br />
            <div class="row col-sm-10">
                <div class="col">
                    <label asp-for="TaxDeduction" class="control-label"></label>
                    <input asp-for="TaxDeduction" class="form-control" />
                    <span asp-validation-for="TaxDeduction" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Comission" class="control-label"></label>
                    <input asp-for="Comission" class="form-control" />
                    <span asp-validation-for="Comission" class="text-danger"></span>
                </div>
            </div><br />
            <div class="row col-sm-10">
                <div class="col">
                    <label asp-for="Remarks" class="control-label"></label>
                    <input asp-for="Remarks" class="form-control" />
                    <span asp-validation-for="Remarks" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="AMF" class="control-label"></label>
                    <input asp-for="AMF" class="form-control" />
                    <span asp-validation-for="AMF" class="text-danger"></span>
                </div>
                <div class="col">
                    <input type="submit" value="Save" class="btn btn-primary" style="margin-top:30px;width:100px;" />
                </div>
            </div>
        </form>
    </div>
</div>



